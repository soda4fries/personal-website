---
import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  ProjectScreen,
  getTranslatedProjects,
  type TranslatedProject,
} from '@/features/projects';
import { ui, type LanguageCode } from '@/i18n/ui';

export async function getStaticPaths() {
  // Since this is a single-language site, just use the default language
  const projects = getTranslatedProjects('en');
  
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project, lang: 'en' as LanguageCode },
  }));
}
const { project, lang } = Astro.props as { project: TranslatedProject; lang: LanguageCode };

const t = ui[lang];

if (!project) {
  return Astro.redirect('/404');
}

const pageTitle = `${project.title} | ${t.site.title}`;
const pageDescription = project.detailedDescription ?? project.description;
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <ProjectScreen project={project} t={t} lang={lang} />
</BaseLayout>
